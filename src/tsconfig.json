	"compilerOptions": {
		"target": "es5",
		"module": "amd",
		"jsx": "react",
		"outDir": "../build/js"
	},
	"compileOnSave": false,
	"filesGlob": [
		"**/*.ts",
		"**/*.tsx",
		"!node_modules/**"
