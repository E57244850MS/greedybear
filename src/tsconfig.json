		"render/CanvasElement.ts",
		"render/Renderer.ts",
		"test/PatternHelper.ts",
		"tools/d2r.ts",
		"types.ts",
		"utils/KeyboardInput.ts",
		"utils/Randomizer.ts"
	],
	"atom": {
		"rewriteTsconfig": true
	}
}
